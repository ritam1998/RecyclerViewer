<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176sp"
        android:layout_marginLeft="176sp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="176sp"
        android:layout_marginRight="176sp"
        android:layout_marginBottom="47dp"
        android:text="Teacher Details"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/teacherusername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/teacherusername"
        android:layout_width="350sp"
        android:layout_height="62sp"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="29sp"
        android:layout_marginRight="29sp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="Teacher-name"
        android:inputType="textPersonName"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/teacherspinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Spinner
        android:id="@+id/teacherspinner"
        android:layout_width="353sp"
        android:layout_height="55sp"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="29sp"
        android:layout_marginRight="29sp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/teacherphone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherusername" />

    <Button
        android:id="@+id/teacherbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161sp"
        android:layout_marginLeft="161sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="162sp"
        android:layout_marginRight="162sp"
        android:layout_marginBottom="126sp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="save"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherphone" />

    <EditText
        android:id="@+id/teacherphone"
        android:layout_width="350sp"
        android:layout_height="58sp"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="29sp"
        android:layout_marginRight="29sp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="phone"
        android:inputType="phone"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/teacherbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherspinner" />

</androidx.constraintlayout.widget.ConstraintLayout>