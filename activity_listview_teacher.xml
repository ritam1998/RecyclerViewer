<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5sp"
        card_view:cardMaxElevation="15sp"
        card_view:cardElevation="10sp"
        card_view:contentPadding="5sp"
        android:padding="5sp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        android:layout_marginBottom="4sp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout5"
            android:layout_width="373sp"
            android:layout_height="110sp">

            <TextView
                android:id="@+id/teachername"
                android:layout_width="156sp"
                android:layout_height="37sp"
                android:layout_marginStart="16sp"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="16sp"
                android:layout_marginEnd="104sp"
                android:layout_marginRight="104sp"
                android:layout_marginBottom="12sp"
                android:padding="5sp"
                android:text="Username"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toTopOf="@+id/teacherAdress"
                app:layout_constraintEnd_toStartOf="@+id/teacherId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/teacherAdress"
                android:layout_width="163sp"
                android:layout_height="34sp"
                android:layout_marginStart="17sp"
                android:layout_marginLeft="17sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="199sp"
                android:layout_marginRight="199sp"
                android:layout_marginBottom="16sp"
                android:padding="5sp"
                android:text="address"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/teachername" />

            <TextView
                android:id="@+id/teacherId"
                android:layout_width="92sp"
                android:layout_height="24sp"
                android:layout_marginStart="8sp"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="4sp"
                android:layout_marginEnd="6sp"
                android:layout_marginRight="6sp"
                android:layout_marginBottom="50sp"
                android:text="teacher Id"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/teachername"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.687" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>